<div class="row">
  <h3>User create</h3>
  <form class="form-horizontal" action="/users" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Contact Name:</label>
      <div class="col-sm-10">
      <input type="text" name="user[contact_name]" id="name" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="company" class="col-sm-2 control-label">Company:</label>
      <div class="col-sm-10">
      <input type="text" name="user[company]" id="company" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">Email:</label>
      <div class="col-sm-10">
      <input type="email" name="user[email]" id="email" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="phone" class="col-sm-2 control-label">Phone Number:</label>
      <div class="col-sm-10">
      <input type="text" name="user[phone]" id="phone" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="address" class="col-sm-2 control-label">Address</label>
      <div class="col-sm-10">
      <input type="text" name="user[company_address]" id="address" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="city" class="col-sm-2 control-label">City</label>
      <div class="col-sm-10">
      <input type="text" name="user[city]" id="city" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="state" class="col-sm-2 control-label">State</label>
      <div class="col-sm-10">
      <select type="text" name="user[state_id]" id="state" class="form-control">
        <% @states.each do |state| %>
        <option value="<%=state.id%>"> <%=state.name%> </option>
        <% end %>
      </select>
        </div>
    </div>
    <div class="form-group">
      <label for="zip" class="col-sm-2 control-label">Zip Code</label>
      <div class="col-sm-10">
      <input type="text" name="user[zipcode]" id="zipcode" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password:</label>
      <div class="col-sm-10">
      <input type="password" name="user[password]" id="password" class="form-control">
        </div>
    </div>
    <div class="form-group">
      <label for="passwordc" class="col-sm-2 control-label">Password Confirmation:</label>
      <div class="col-sm-10">
      <input type="password" name="user[password_confirmation]" id="passwordc" class="form-control">
        </div>
    </div>
    <button type="submit" name="create" class="btn btn-primary">Create user</button>

  </form>
  <h3>Existing Customer</h3>
  <div class="bg-danger">
  <%= flash[:error] %>
  </div>
  <form class="form-horizontal" action="/results/find" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
    <div class="form-group">
      <label for="search" class="col-sm-2 control-label">Search by email:</label>
      <div class="col-sm-10">
      <input type="email" name="user[email]" id="search" class="form-control">

        </div>
    </div>
</div>
<button type="submit" name="search" class="btn btn-primary">Search</button>
</form>
<%= link_to "Log Out", session_path(current_user), method: :delete %>
